internal class Program
{
    static void Main(string[] args)
    {
        Instrument[] band = { new Guitar(), new Drum(), new Instrument() };
        foreach (var i in band) i.Play();
        Console.ReadLine();
    }
}

class Instrument
{
    public virtual void Play() => Console.WriteLine("Играет музыка...");
}
internal class Guitar : Instrument
{
    public override void Play() => Console.WriteLine("Брыньк-Бреньк!");
}
internal class Drum : Instrument
{
    public override void Play() => Console.WriteLine("Бум-Бам-Бумс!");
}
